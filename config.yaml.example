# Webflow Configuration
webflow:
  api_token: "YOUR_WEBFLOW_API_TOKEN"
  episode_collection_id: "YOUR_EPISODE_COLLECTION_ID"
  category_collection_id: "YOUR_CATEGORY_COLLECTION_ID"
  site_id: "YOUR_SITE_ID"

# YouTube Configuration
youtube:
  api_key: "YOUR_YOUTUBE_API_KEY"
  channel_id: "YOUR_YOUTUBE_CHANNEL_ID"
  search_prefix: "YOUR_SEARCH_PREFIX"  # This prefix helps find specific episodes

# RSS Feed Configuration
rss:
  feed_url: "YOUR_RSS_FEED_URL"
  last_processed_file: "debug/last_published_time.txt"  # File to store last processed timestamp
  poll_log_file: "debug/rss_poll.log"  # Log file for RSS polling activity

# Apple Podcast Configuration
apple_podcast:
  base_url: "YOUR_APPLE_PODCAST_URL"

# Spotify Configuration
spotify:
  client_id: "YOUR_SPOTIFY_CLIENT_ID"
  client_secret: "YOUR_SPOTIFY_CLIENT_SECRET"
  show_id: "YOUR_SPOTIFY_SHOW_ID"
  default_episode_id: "optional-default-episode-id"

# goodpods Configuration
goodPods:
  base_url: "YOUR_GOODPODS_URL"

# default episode color
default_episode_color: "#YOUR_DEFAULT_COLOR"

# Scheduling Configuration
schedule:
  interval_minutes: 3  # How often to check for new episodes
  start_datetime: "YYYY-MM-DD HH:MM:SS"  # When to start checking
  timezone_offset: 0  # GMT offset (e.g., -5 for EST, -8 for PST)

# OpenAI Configuration
openai:
  api_key: "YOUR_OPENAI_API_KEY"
  # Timeout settings in seconds
  default_timeout: 60.0    # Default timeout for most requests
  transcription_timeout: 1800  # 30 minutes for audio transcription
  max_retries: 2           # Number of retries for failed requests
  # Rate limiting settings
  rate_limit_delay: 15     # Seconds to wait between API calls (default: 15)
  rate_limit_retry_delay: 60  # Seconds to wait when rate limited (default: 60, doubles each retry)

# BuzzSprout Configuration
buzzSprout:
  api_key: "YOUR_BUZZSPROUT_API_KEY"
  podcast_id: "YOUR_PODCAST_ID"

# Podcast Host Configuration
hosts:
  host1:
    name: "YOUR_HOST1_NAME"
    short_name: "YOUR_HOST1_SHORT_NAME"
  host2:
    name: "YOUR_HOST2_NAME"
    short_name: "YOUR_HOST2_SHORT_NAME"

# Text Replacement Configuration
text_replacements:
  - wrong: "market maker"
    correct: "Market MakeHer"
  - wrong: "marketmaker"
    correct: "Market MakeHer"
  - wrong: "market makeher"
    correct: "Market MakeHer"
  - wrong: "YOUR_WRONG_TEXT"
    correct: "YOUR_CORRECT_TEXT"

# Excerpt generation settings
excerpt:
  # Maximum number of tokens to use from transcript for generating excerpt
  max_input_tokens: 30000
  # Target length of the generated excerpt in characters
  target_length: 73

# Transcription settings
transcription:
  # Speed up audio before sending to OpenAI to reduce costs (default: true)
  speed_up_audio: true
  # Speed factor for audio (2.0 = double speed, reduces costs by ~50%)
  speed_factor: 2.0